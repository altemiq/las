<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
    <TargetFrameworks Condition=" '$(NetCoreOnly)' != 'true' ">$(TargetFrameworks);net472</TargetFrameworks>
    <IsTestProject Condition=" '$(SupportLas14)' != 'true' ">false</IsTestProject>
    <MeziantouPolyfill_IncludedPolyfills>
      $(MeziantouPolyfill_IncludedPolyfills)|
      T:System.Index|
      T:System.Range|
    </MeziantouPolyfill_IncludedPolyfills>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\IO.Las.Cloud\IO.Las.Cloud.csproj" />
  </ItemGroup>

  <Target Name="_SetNoBuild"
          BeforeTargets="_SetBuildInnerTarget"
          Condition=" '$(SupportLas14)' != 'true' ">
    <PropertyGroup>
      <InnerTargets>NoBuild</InnerTargets>
    </PropertyGroup>
  </Target>

  <Target Name="NoBuild">
    <Message Importance="high" Text="Skipping build for $(MSBuildProjectName) due to LAS 1.4 not being supported." />
  </Target>
  
</Project>
