<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
    <RootNamespace>$(RootNamespace.Replace('.Compression.DataFrame', ''))</RootNamespace>
    <VersionSuffix Condition=" '$(VersionSuffix)' == '' ">beta1</VersionSuffix>
    <NoWarn Condition=" !$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net10.0')) ">$(NoWarn);AD0001</NoWarn>
    
    <!-- set things that Polars.NET doesn't support -->
    <IsAotCompatible>false</IsAotCompatible>
    <SignAssembly>false</SignAssembly>
  </PropertyGroup>

  <PropertyGroup Label="Packaging">
    <_Tag>Polars DataFrame</_Tag>
    <Product>$(Product.Replace('{Type}', '$(_Tag)'))</Product>
    <Description>Provides support for reading LAS/LAZ to Polars data frames</Description>
    <PackageTags>$(PackageTags);$(_Tag.Replace(' ',';'))</PackageTags>
  </PropertyGroup>
    
  <ItemGroup>
    <Using Include="Polars.CSharp" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\IO.Las.Compression.Arrow\IO.Las.Compression.Arrow.csproj" />
    <ProjectReference Include="..\IO.Las.DataFrame\IO.Las.DataFrame.csproj" />
  </ItemGroup>

</Project>
