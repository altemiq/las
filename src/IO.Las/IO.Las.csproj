<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net10.0;net9.0;net7.0;net5.0;netstandard2.1;netstandard2.0</TargetFrameworks>
    <MeziantouPolyfill_IncludedPolyfills>
      $(MeziantouPolyfill_IncludedPolyfills)|
      M:System.ArgumentNullException.ThrowIfNull(System.Object,System.String)|
      M:System.ArgumentOutOfRangeException.ThrowIfEqual``1(``0,``0,System.String)|
      M:System.ArgumentOutOfRangeException.ThrowIfGreaterThanOrEqual``1(``0,``0,System.String)|
      M:System.ArgumentOutOfRangeException.ThrowIfGreaterThan``1(``0,``0,System.String)|
      M:System.ArgumentOutOfRangeException.ThrowIfLessThanOrEqual``1(``0,``0,System.String)|
      M:System.ArgumentOutOfRangeException.ThrowIfLessThan``1(``0,``0,System.String)|
      M:System.IO.Stream.Read(System.Span{System.Byte})|
      M:System.IO.Stream.ReadAsync(System.Memory{System.Byte},System.Threading.CancellationToken)|
      M:System.IO.Stream.Write(System.ReadOnlySpan{System.Byte})|
      M:System.IO.Stream.WriteAsync(System.ReadOnlyMemory{System.Byte},System.Threading.CancellationToken)|
      M:System.Text.Encoding.GetString(System.ReadOnlySpan{System.Byte})|
      T:System.Diagnostics.CodeAnalysis.DisallowNullAttribute|
      T:System.Diagnostics.CodeAnalysis.DoesNotReturnAttribute|
      T:System.Diagnostics.CodeAnalysis.DynamicallyAccessedMembersAttribute|
      T:System.Diagnostics.CodeAnalysis.DynamicallyAccessedMemberTypes|
      T:System.Diagnostics.CodeAnalysis.MemberNotNullWhenAttribute|
      T:System.Diagnostics.CodeAnalysis.NotNullAttribute|
      T:System.Diagnostics.CodeAnalysis.NotNullWhenAttribute|
      T:System.Diagnostics.CodeAnalysis.MaybeNullWhenAttribute|
      T:System.Diagnostics.CodeAnalysis.StringSyntaxAttribute|
      T:System.Diagnostics.UnreachableException|
      T:System.HashCode|
      T:System.Index|
      T:System.Range|
      T:System.Runtime.CompilerServices.CallerArgumentExpressionAttribute|
      T:System.Runtime.CompilerServices.CollectionBuilderAttribute|
      T:System.Runtime.CompilerServices.CompilerFeatureRequiredAttribute|
      T:System.Runtime.CompilerServices.IsExternalInit|
      T:System.Runtime.CompilerServices.RequiredMemberAttribute|
      T:System.Diagnostics.CodeAnalysis.SetsRequiredMembersAttribute|
    </MeziantouPolyfill_IncludedPolyfills>

    <!-- turn off buggy analyzer -->
    <NoWarn>$(NoWarn);S1117</NoWarn>
    <NoWarn Condition=" !$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net10.0')) ">$(NoWarn);AD0001</NoWarn>
  </PropertyGroup>

  <PropertyGroup Label="Packaging">
    <_Tag />
    <Product>$(Product.Replace('{Type}', '$(_Tag)'))</Product>
    <Description>Provides high-performance and low-allocating types that read and write LAS points to streams.</Description>
    <PackageTags>$(PackageTags);$(_Tag)</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Meziantou.Polyfill">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition=" !$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'netstandard2.1')) ">
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" VersionOverride="1.0.0" />
    <PackageReference Include="Microsoft.Bcl.HashCode" VersionOverride="1.0.0" />
    <PackageReference Include="System.Memory" VersionOverride="4.5.4" />
  </ItemGroup>

  <ItemGroup Condition=" !$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'netcoreapp1.0')) AND $([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'netstandard2.1')) ">
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" VersionOverride="4.5.3" />
  </ItemGroup>

  <ItemGroup Condition=" !$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net7.0')) ">
    <Compile Remove="IBasePointDataRecord{TSelf}.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net5.0')) ">
    <Compile Remove="ExtensionMethods.BinaryPrimitives.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="PointConverter.*.cs;HeaderBlockBuilder.*.cs;ExtensionMethods.*.cs;Vector*D.*.cs">
      <DependentUpon>$([System.Text.RegularExpressions.Regex]::Replace('%(Filename)%(Extension)', '\.[^.]+\%(Extension)$', '%(Extension)'))</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup Condition=" '$(SupportLas12)' != 'true' ">
    <!-- Remove color point data records for versions below 1.2 -->
    <Compile Remove="**\*Color*.cs" />

    <!-- Remove global encoding -->
    <Compile Remove="**\GlobalEncoding.cs" />

    <!-- Remove v1.2 specific resources -->
    <EmbeddedResource Remove="Properties\v1.2\*.resx" />
    <None Remove="Properties\v1.2\*.xml" />
  </ItemGroup>

  <ItemGroup Condition=" '$(SupportLas13)' != 'true' ">
    <!-- Remove wavepoint point data records for versions below 1.3 -->
    <Compile Remove="**\*Waveform*.cs" />

    <!-- Remove EVLRs -->
    <Compile Remove="**\*ExtendedVariableLengthRecord*.cs" />

    <!-- Remove v1.3 specific resources -->
    <EmbeddedResource Remove="Properties\v1.3\*.resx" />
    <None Remove="Properties\v1.3\*.xml" />
  </ItemGroup>

  <ItemGroup Condition=" '$(SupportLas14)' != 'true' ">
    <!-- Remove extended point data records for versions below 1.4 -->
    <Compile Remove="**\*Extended*PointDataRecord*.cs" />

    <!-- Remove near-infrared point data records -->
    <Compile Remove="**\*NearInfrared*.cs" />

    <!-- remove new VLRs -->
    <Compile Remove="**\*ExtraBytes*.cs" />
    <Compile Remove="**\Ogc*Wkt.cs" />
    <Compile Remove="**\Superseded.cs" />

    <!-- Remove v1.4 specific resources -->
    <EmbeddedResource Remove="Properties\v1.4\*.resx" />
    <None Remove="Properties\v1.4\*.xml" />
  </ItemGroup>

  <ItemGroup Condition=" '$(SupportLas15)' != 'true' ">
    <!-- Remove v1.5 specific resources -->
    <EmbeddedResource Remove="Properties\v1.5\*.resx" />
    <None Remove="Properties\v1.5\*.xml" />
  </ItemGroup>
  
  <ItemGroup>
    <InternalsVisibleTo Include="$(AssemblyName).Cloud" />
    <InternalsVisibleTo Include="$(AssemblyName).Compression" />
    <InternalsVisibleTo Include="$(AssemblyName).Indexing" />
    <InternalsVisibleTo Include="las" />
  </ItemGroup>
  
  <ItemGroup Label="Tests" Condition=" '$(Configuration)' == 'Debug' ">
    <InternalsVisibleTo Include="$(AssemblyName).Compression.Tests" />
    <InternalsVisibleTo Include="$(AssemblyName).Tests" />
  </ItemGroup>
  
  <ItemGroup>
    <CompilerVisibleProperty Include="RootNamespace" />
    <ProjectReference Include="..\..\generators\IO.Las.CodeGeneration\IO.Las.CodeGeneration.csproj"
                      SetTargetFramework="TargetFramework=netstandard2.0"
                      OutputItemType="Analyzer"
                      ReferenceOutputAssembly="false" />
  </ItemGroup>

  <Target Name="_DownloadStandardSystemIdentifiers" BeforeTargets="CoreCompile">
    <DownloadFile SourceUrl="https://github.com/ASPRSorg/LAS/wiki/attachments/platforms.csv" DestinationFolder="$(IntermediateOutputPath)" SkipUnchangedFiles="true">
      <Output TaskParameter="DownloadedFile" ItemName="AdditionalFiles"/>
    </DownloadFile>
    <DownloadFile SourceUrl="https://github.com/ASPRSorg/LAS/wiki/attachments/models.csv" DestinationFolder="$(IntermediateOutputPath)" SkipUnchangedFiles="true">
      <Output TaskParameter="DownloadedFile" ItemName="AdditionalFiles"/>
    </DownloadFile>
  </Target>

</Project>
